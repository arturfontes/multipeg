<script>
	document.getElementById("enviar_email").addEventListener("click", function(event) {
		event.preventDefault();
		var escolha = document.getElementById("abrir_solicitacao").value;
		window.location.href = "mailto:artur@censupeg.com.br?subject=" + encodeURIComponent(escolha) + "&body=Olá, Artur! Gostaria de requerer uma " + encodeURIComponent(escolha) + ".";
	});
